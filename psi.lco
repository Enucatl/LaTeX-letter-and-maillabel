\LoadLetterOption{SN}

\KOMAoptions{%
    parskip=half,
    fromrule=false,
    numericaldate=false,
    foldmarks=false,
    backaddress=false,
    refline=dateleft,
}

\RequirePackage[utf8]{inputenc}
\RequirePackage[T1]{fontenc}
\renewcommand{\familydefault}{\sfdefault}
\RequirePackage[scaled=0.9]{helvet}
